	journal = {Genome Res},
	author = {Baliga, Nitin S. and Bonneau, Richard and Facciotti, Marc T. and Pan, Min and Glusman, Gustavo and Deutsch, Eric W. and Shannon, Paul and Chiu, Yulun and Weng, Rueyhung Sting and Gan, Rueichi Richie and Hung, Pingliang and Date, Shailesh V. and Marcotte, Edward and Hood, Leroy and Ng, Wailap Victor},
