	keywords = {Bacterial, Escherichia coli K12, Escherichia coli Proteins, Evolution, Gene Expression Regulation, Gene Transfer, Genetic, genetics, Horizontal, Models, Molecular, Operon, Promoter Regions},
	pages = {809–819}
}

