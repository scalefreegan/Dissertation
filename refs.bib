	keywords = {Animals, Biological, {GABA}-A, Humans, Membrane Potentials, Mitochondria, Mitochondrial Membrane Transport Proteins, Models, Reactive Oxygen Species, Receptors, Signal Transduction, Voltage-Dependent Anion Channels},
